@{
    Layout = null;
}
@using MS.ECP.Web.Areas.Admin.WebHelp
@using MS.ECP.Web.WebHelp
@model MS.ECP.Web.Areas.Admin.Models.LoginModel
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>MissionskyAdmin</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/Content/Css/global.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/Content/Css/login.css")" />
    @Html.GetJqueryInAdmin()  
    @Html.GetValidationJavascriptInAdmin()  

</head>
<body>
    <div class="loginbox">
        @using (Html.BeginForm("Logon", "Account", FormMethod.Post, new {id = "loginform"}))
        {
            <div class="logo"></div>
            <div class="username">
                @Html.InnerTextBoxFor(m => m.UserName, new
                {
                    onfocus = " if (value == '" + @Html.DisplayName(m => m.UserName) + "') {value = ''} ",
                    onblur = " if (value == '') {value = '" + @Html.DisplayName(m => m.UserName) + "'} "
                })
            </div>
            <div class="password">
                @Html.PasswordFor(m=>m.Password)
            </div>
            <div class="error_info">
            @Html.ValidationSummary(false)
            </div>
            <div class="action_button">
                <div style="text-align: center;">
                    <input class="submit" type="submit" value="Login" />
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input class="button" type="reset" value="Reset" />
                </div>
            </div>
        }
    </div>
</body>

</html>

