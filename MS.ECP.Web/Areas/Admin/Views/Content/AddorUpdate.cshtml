                    @Html.TextBoxFor(m => m.ZhItem, new { @class = "table_input" })
                </td>
            </tr>
            <tr>
                <td colspan="2" class="add_title">@Html.DisplayName(m => m.ZhItemContent) </td>
                <td class="text_td">
                    @Html.TextAreaFor(m => m.ZhItemContent, new { width = "700", height = "200", id = Model.ZhContentDivId })
