        <table cellpadding="1" cellspacing="1" class="add_table">
            <tr>
                @Html.Hidden("currentpage", ViewData["Currentpage"])
                @Html.HiddenFor(m => m.EnID)
                @Html.HiddenFor(m => m.ZhID)
