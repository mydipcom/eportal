@using MS.ECP.Web.Areas.Admin.WebHelp
@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>MissionskyAdmin</title>
    <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/Content/Css/global.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/Content/Css/login.css")" />
    <script type="text/javascript">
        var i, j;

        function showMenu(j) {
            for (i = 1; i < 4; i++) {
                document.getElementById("submenu" + i).style.display = "none";
                document.getElementById("onMenu" + i).className = "clearMenu" + i;
            }
            document.getElementById("submenu" + j).style.display = "block";
            document.getElementById("onMenu" + j).className = "activeMenu";
        }

    </script>
</head>

<body>
    <div class="menuBody">
        <div class="s_logo">
            @Html.ActionLink(" ","Content","Shared",null,new{ target = "MainContent" })
        </div>
        <div class="menu">
            <ul>
                <li>
                    <a class="clearMenu1" id="onMenu1" href="javascript:void(0);" onclick="showMenu('1')">Content</a>
                    <ul id="submenu1">
                        <li>
                            @Html.ActionLink("Category Manage", "List", "Category", null, new { target = "MainContent" })
                        </li>
                        <li>
                            @Html.ActionLink("Content Manage", "List", "Content", null, new { target = "MainContent" })
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="clearMenu2" id="onMenu2" href="javascript:void(0)" onclick="showMenu('2')">Others</a>
                    <ul id="submenu2">
                        <li>
                            @Html.ActionLink("Job Manage", "List", "Job", null, new { target = "MainContent" })
                        </li>
                        <li>
                            @Html.ActionLink("News Manage", "List", "News", null, new { target = "MainContent" })
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="clearMenu3" id="onMenu3" href="javascript:void(0)" onclick="showMenu('3')">Settings</a>
                    <ul id="submenu3">
                        <li>
                            @Html.ActionLink("Resource Settings", "List", "Resource", null, new { target = "MainContent" })
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</body>
</html>

