                        <li><span class="pic">
                            <img src="@Url.Content("~/Content/" + ResourcesHelper.GetLang() + "/images/content/banner2.png")" /></span></li>
                        <li><span class="pic">
                            <img src="@Url.Content("~/Content/" + ResourcesHelper.GetLang() + "/images/content/banner3.png")" /></span></li>
                    </ul>
                    <a href="#" class="banner-prev"></a>
                    <a href="#" class="banner-next"></a>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <div class="clear"></div>

