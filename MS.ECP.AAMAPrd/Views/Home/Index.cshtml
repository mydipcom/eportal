<script type="text/javascript">
    $(function () {
        $('#advertisement').roundabout({
            btnPrev: $(".banner-prev"),
            btnNext: $(".banner-next"),
            autoplay: true,
            autoplayDuration: 5000,
            minOpacity: 1.0,
            minScale: 0.08
        });

      
    });
</script>
<style type="text/css">
    .banner-prev {
        position: absolute;
        left: 0;
        top: 150px;
        width: 23px;
        height: 58px;
        background: url(../images/pre_btn.png) no-repeat;
        z-index: 999;
    }

    .banner-next {
        position: absolute;
        right: 10px;
        top: 150px;
        width: 23px;
        height: 58px;
        background: url(../images/next_btn.png) no-repeat;
        z-index: 999;
    }
</style>
