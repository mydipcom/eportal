@using MS.ECP.Utility;

@model MS.ECP.AAMAPrd.Areas.Admin.Models.LoginModel 
@{
    ViewBag.Title = "登录";    
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<div class="centcontent">
    <div id="detail_main" class="wrapper">
        <div class="content_5">

        <p>
            请输入用户名和密码。如果您没有帐户，请<a href=" @Url.Action("Register", "Home")">注册</a>。
        </p>

        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

        @Html.ValidationSummary(true, "登录不成功。请更正错误并重试。")

        @using (Html.BeginForm("LogOn","Account", FormMethod.Post))
        {
            <div>
                <fieldset>
                    <legend><h4>登录信息</h4></legend>
                    <div class="content_login_cent">
                        <div class="editor-label">
                            @Html.LabelFor(m => m.UserName)
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.UserName)
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(m => m.Password)
                        </div>
                        <div class="editor-field">
                            @Html.PasswordFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>

                        <div class="editor-label">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                        <p>
                            <input type="submit" class="content_login_cent" value="登录" />
                        </p>
                    </div>
                </fieldset>
            </div>
        }
    </div>
</div>
   </div>

