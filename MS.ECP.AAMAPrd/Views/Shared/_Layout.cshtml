    <script type="text/javascript" src="@Url.Content("~/Scripts/my.login.js")"></script>

    <script type="text/javascript" src="@Url.Content("~/Content/" + ResourcesHelper.GetLang() + "/js/jquery-1.7.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/" + ResourcesHelper.GetLang() + "/js/jquery.roundabout.js")"></script>

    <!-- 对应my.ajax.js和my.register.js -->
    <script type="text/javascript">
        var alertJson = eval([{ @Html.Raw(ViewBag.alertJson) }]);   
    </script>



</head>

<body class="no_js">
    <div id="top-space"></div>
    <div id="header">
        <div class="inner">

            <!-- START LOGO -->
            <div id="logo">
                <a href="@Url.Action("index", "home")" title="AAMA - Pearl River Delta Chapter">AAMA Pearl River Delta Chapter</a>
            </div>
            <!-- END LOGO -->
            @*<div class="language"> @Html.Partial("_LogOnPartial")</div>*@
            <div class="language">
                @{
                    var lanage = new MS.ECP.BLL.SysLanguage();
                    var langlist = lanage.GetList(String.Format(" LangCode!='{0}' {1} ", ResourcesHelper.GetLang(), " Order by LangOrder ASC "));
                    foreach (var drOther in langlist)
                    {
                    @Html.ActionLink(drOther.LanguageText, "ChangeLanguage", "Lang", new { language = drOther.LanguageCode }, null)
                    }
                }
            </div>


            <div id="nav">
                <ul class="level-1 black" >
                    <li>
                        @Html.ActionLink(reHelper.GetString("aama_menu_lbl_homepage"), "Index", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(reHelper.GetString("aama_menu_lbl_aboutus"), "About", "Home")
                    </li>

                    <li>
                        @Html.ActionLink(reHelper.GetString("aama_menu_lbl_mutilnews"), "MultiNews", "Home") 
                    </li>

                    <li>
                        @Html.ActionLink(reHelper.GetString("aama_menu_lbl_news"), "News", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(reHelper.GetString("aama_menu_lbl_events"), "Events", "Home")
                    </li>
                    
                    <li>
                        @Html.ActionLink(reHelper.GetString("aama_menu_lbl_contactus"), "Contact", "Home")
                    </li>
                </ul>
            </div>
            <!-- END NAV -->
            <div class="clear"></div>
        </div>
    </div>
    @RenderBody()
    <p id="copyright">&copy; 2013  @reHelper.GetString("aama_foot_lab_remark")</p>
</body>
</html>
