    <link href="@Url.Content("~/Scripts/fancybox/jquery.fancybox-1.3.4.css")" rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/Content/" + ResourcesHelper.GetLang() + "/css/css.css")" rel="stylesheet" type="text/css" />


    <script type="text/javascript" src="@Url.Content("~/Content/" + ResourcesHelper.GetLang() + "/js/jquery.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/" + ResourcesHelper.GetLang() + "/js/ui.core.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/" + ResourcesHelper.GetLang() + "/js/jquery.cycle.all.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/" + ResourcesHelper.GetLang() + "/js/jquery.nivo.slider.pack.js")"></script>
