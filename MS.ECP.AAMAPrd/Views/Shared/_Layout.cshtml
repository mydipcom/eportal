<html>
<head>
       <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/logo.ico")" />
    <title>AAMA PRD Chapter</title>
    <meta http-equiv="Content-Language" content="@ResourcesHelper.GetLang()" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta name="keywords" content="AAMA PRD Chapter" />
    <meta name="description" content="AAMA PRD Chapter" />

    <link href="@Url.Content("~/Content/" + ResourcesHelper.GetLang() + "/css/style.css")" rel="stylesheet" type="text/css" />
