@model MS.ECP.AAMAPrd.Areas.Admin.Models.NewsViewModel

@{
    ViewBag.Title = "News Edit";
}

@section csses
{
    <link rel="stylesheet" href="@Url.Content("~/Content/admin/css/jquery-ui.css")" type="text/css" media="screen" />
}

@section scripts
{
    <script src='@Url.Content("~/Content/Admin/js/jquery-ui.js")'  type='text/javascript' ></script>
    <script src="@Url.Content("~/Scripts/UEditor/editor_config.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/UEditor/_examples/editor_api.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <script type="text/javascript">

        $(function () {
            UE.getEditor('ZhSpecification');
            UE.getEditor('EnSpecification');
            UE.getEditor('UEContent');
            UE.getEditor('CUEContent');
            kriesi_tab('#jquerytabdiv', '.jquery_tab_title', '.jquery_tab'); /*remove this if you dont want to have jquery tabs*/
            kriesi_closeable_divs(".closeable"); /*remove this if you dont want message box to be closeable*/
        });

    </script>
}
          
 <div id="jquerytabdiv" style="margin: 50px 0 0 0;">
             @using (Html.BeginForm("Edit", "News", FormMethod.Post))
             {
                 <div class="jquery_tab">
                     <div class="content_block">
                         <h2 class="jquery_tab_title">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;English (Default)</h2>
                         @*    <input style="display: none;" name="LanguageCode" value="en-us"/>*@ 
                         <p>
                             @Html.LabelFor(m => m.EnTitle)
                             @Html.TextBoxFor(m => m.EnTitle)
                             @Html.ValidationMessageFor(model => model.EnTitle)
                         </p>
                    
                         <p>
                             @Html.LabelFor(m => m.EnContent) 
                         <div class="content paddingbottom22" >
                             @Html.TextAreaFor(m => m.EnContent, new {id = "UEContent", rows = "100", cols = "100"})
                              @Html.ValidationMessageFor(model => model.EnContent)
                         </div>  
                         </p>
                         
                         
                         
                         <p>
                             @Html.LabelFor(m => m.EnSpecification) 
                         <div class="content paddingbottom22" >
                             @Html.TextAreaFor(m => m.EnSpecification, new {id = "EnSpecification", rows = "100", cols = "100"})
                              @Html.ValidationMessageFor(model => model.EnSpecification)
                         </div>  
                         </p>
                                    
                     </div>
                     <!--end content_block-->
                 </div>
                 <div class="jquery_tab">
                     <div class="content_block">
                         <h2 class="jquery_tab_title">简体中文</h2>
                         <input style="display: none;" name="zhLanguageCode" value="zh-cn"/>
                         <p>
                             @Html.LabelFor(m => m.ZhTitle)
                             @Html.TextBoxFor(m => m.ZhTitle)
                             @Html.ValidationMessageFor(model => model.ZhTitle)
                         </p>
                         <p>
                             @Html.LabelFor(m => m.ZhContent)
                             <div class="content paddingbottom22" >
                                 @Html.TextAreaFor(m => m.ZhContent, new {id = "CUEContent", rows = "100", cols = "100"})
                                 @Html.ValidationMessageFor(model => model.ZhContent)
                             </div> 
                         </p>
                         
                         
                         <p>
                             @Html.LabelFor(m => m.ZhSpecification)
                             <div class="content paddingbottom22" >
                                 @Html.TextAreaFor(m => m.ZhSpecification, new {id = "ZhSpecification", rows = "100", cols = "100"})
                                 @Html.ValidationMessageFor(model => model.ZhSpecification)
                             </div> 
                         </p>


                     </div>
                     <!--end content_block-->
                 </div>
                 @Html.HiddenFor(d => d.TxtKeywords, new {@class = "input-big"})
                 @Html.HiddenFor(d => d.TxtDesc, new {@class = "input-big"})
                 @Html.HiddenFor(d => d.TxtHits, new {@class = "input-big"})
        
                 @Html.HiddenFor(m => m.ZhId)
                 @Html.HiddenFor(m => m.EnId)

                 
                 @Html.AntiForgeryToken()
                 @Html.ValidationSummary()
                 <p>
                     <input  name="submit" type="submit" value="Submit"  /> 
                     <input  name="back" type="button" value="Reset" onclick=" location.href = '' " />
                 </p>
             }

        <!--end content-->

     </div>
